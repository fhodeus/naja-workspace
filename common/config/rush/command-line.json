/**
 * This configuration file defines custom commands for the "rush" command-line.
 * More documentation is available on the Rush website: https://rushjs.io
 */
 {
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",

  /**
   * Custom "commands" introduce new verbs for the command-line.  To see the help for these
   * example commands, try "rush --help", "rush my-bulk-command --help", or
   * "rush my-global-command --help".
   */
  "commands": [
    {
      "commandKind": "bulk",
      "name": "build:watch",
      "summary": "Builds the projects in watch mode for development purposes",
      "enableParallelism": true,
      // Technically not safe however we want to be able to run some rush commands 
      // while this is running in watch mode.
      "safeForSimultaneousRushProcesses": true,
      "incremental": true,
      "watchForChanges": true
    },
    {
      "commandKind": "bulk",
      "name": "test",
      "summary": "Tests the projects by running the test script in each package",
      "enableParallelism": true,
      "safeForSimultaneousRushProcesses": true,
      "incremental": true,
      "allowWarningsInSuccessfulBuild": true
    },
    {
      "commandKind": "bulk",
      "name": "lint",
      "summary": "Lints all the projects based on their selected lint method",
      "enableParallelism": true,
      "safeForSimultaneousRushProcesses": true,
      "incremental": true,
      "allowWarningsInSuccessfulBuild": false
    },
    {
      "name": "format",
      "commandKind": "global",
      "summary": "Used by the pre-commit Git hook. This command invokes Prettier to reformat staged changes.",
      "safeForSimultaneousRushProcesses": true,
      "autoinstallerName": "rush-prettier",
      // This will invoke common/autoinstallers/rush-prettier/node_modules/.bin/pretty-quick
      "shellCommand": "pretty-quick --staged"
    },
    {
        "commandKind": "global",
        "name": "start",
        "summary": "Start Development Servers",
        "shellCommand": "pnpm run build:watch --dir ./common/temp --parallel --stream --filter=*"
    }
  ],

  /**
   * Custom "parameters" introduce new parameters for specified Rush command-line commands.
   */
  "parameters": [
    {
      "parameterKind": "choice",
      "alternatives": [
        {
          "description": "Production build with minification and type checking",
          "name": "production"
        },
        {
          "description": "Development build without minification or type checking for speed (Default)",
          "name": "development"
        }
      ],
      "description": "Picks the BUILD environment this command is running under. Does not affect configuration.",
      "longName": "--environment",
      "required": false,
      "associatedCommands": [
        "rebuild",
        "build",
        "build:watch"
      ]
    },
    {
      "parameterKind": "flag",
      "description": "Determines whether to automatically fix the lint issues.",
      "longName": "--fix",
      "required": false,
      "associatedCommands": [
        "lint"
      ]
    }
  ]
}
